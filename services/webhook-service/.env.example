# Application
APP_NAME=Webhook Service
APP_VERSION=1.0.0
ENVIRONMENT=development
APP_SECRET_KEY=your-secret-key-for-jwt-signing-change-in-production
APP_URL=http://localhost:8000
PORT=8000

# Database (Neon Postgres)
# Format: postgresql+asyncpg://user:password@host/database?sslmode=require
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/webhook_service
SHOW_SQL_QUERIES=false

# Redis (Upstash or local)
REDIS_URL=redis://localhost:6379

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8000/auth/github/callback

# Cloudflare R2 (for repo storage - Phase 3)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=webhook-service-repos

# Anthropic (for Claude agent execution - Phase 5)
ANTHROPIC_API_KEY=

# Rate Limits
DEFAULT_RATE_LIMIT_PER_MINUTE=10
DEFAULT_RATE_LIMIT_PER_HOUR=100
USER_RATE_LIMIT_PER_MINUTE=50
USER_RATE_LIMIT_PER_HOUR=500
